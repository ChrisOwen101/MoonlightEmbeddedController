<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity$PlaceholderFragment"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="This application was created by Chris Owen."
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="For enquiries, contact me at:\nchris@thecodethatchriswrote.com"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:gravity="center"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Huge thanks to:

    Cameron Gutman
    Diego Waxemberg
    Aaron Neyer
    Michelle Bergeron
    Andrew Hennessy

    The orginal creators of Moonlight and without which none of this would be possible."
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/opensource"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:text="I use the following open source application in this application:

http://developer.android.com/tools/support-library
        com.android.support:cardview-v7
        com.android.support:appcompat-v7

        http://square.github.io/otto/
        com.squareup:otto

        http://square.github.io/retrofit/
        com.squareup.retrofit:retrofit

        http://square.github.io/okhttp/
        com.squareup.okhttp:okhttp

        https://github.com/chrisjenx/Calligraphy
        uk.co.chrisjenx:calligraphy

https://github.com/dmytrodanylyk/circular-progress-button
        com.github.dmytrodanylyk.circular-progress-button

        http://jakewharton.github.io/butterknife/
        com.jakewharton:butterknife

https://github.com/afollestad/material-dialogs
        com.afollestad:material-dialogs

https://github.com/lsjwzh/MaterialLoadingProgressBar
        com.lsjwzh:materialloadingprogressbar

https://github.com/bumptech/glide
        com.github.bumptech.glide:glide

https://github.com/twotoasters/JazzyListView
        com.twotoasters.jazzylistview:library
        "
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>